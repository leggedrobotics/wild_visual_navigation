<launch>
  <!-- Arguments -->
  <arg name="camera"            default="alphasense"/> <!-- alphasense, wide_angle_front, realsense_front, realsense_rear -->
  <arg name="stack"             default="anybotics"/> <!-- rsl or anybotics -->
  <arg name="params_file"       default="$(find wild_visual_navigation_ros)/config/wild_visual_navigation/default.yaml"/>
  <arg name="name"              default="wild_visual_navigation_node"/>
  <arg name="overlay_images"    default="True"/>

  <!-- Load parameters -->
  <rosparam command="load" file="$(arg params_file)" ns="$(arg name)"/>
  <!-- We overlay using the camera name to choose the right input -->
  <rosparam command="load" file="$(find wild_visual_navigation_ros)/config/wild_visual_navigation/inputs/$(arg camera).yaml" ns="$(arg name)"/>

  <!-- Launch node -->
  <node name="$(arg name)" pkg="wild_visual_navigation_ros" type="wild_visual_navigation_node.py" output="screen">
    <param if="$(eval arg('stack') == 'rsl')" name="desired_twist_topic" value="/log/state/desiredRobotTwist"/>
    <param if="$(eval arg('stack') == 'anybotics')" name="desired_twist_topic" value="/motion_reference/command_twist"/>
  </node>

  <!-- Nice visualization overlay-->
  <include if="$(arg overlay_images)" file="$(find wild_visual_navigation_ros)/launch/overlay_images.launch"/> 
</launch>
