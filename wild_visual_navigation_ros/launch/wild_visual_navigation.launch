<launch>
  <!-- Arguments -->
  <arg name="camera"            default="alphasense_resize"/> <!-- alphasense, wide_angle_front, realsense_front, realsense_rear -->
  <arg name="stack"             default="anybotics"/> <!-- rsl or anybotics -->
  <arg name="params_file"       default="$(find wild_visual_navigation_ros)/config/wild_visual_navigation/default.yaml"/>
  <arg name="overlay_images"    default="True"/>
  <arg name="resize_images"    default="True"/>
  <arg name="launch_nodes"    default="True"/>

  <!-- Load parameters -->
  <rosparam command="load" file="$(arg params_file)" ns="wvn_learning_node"/>
  <!-- We overlay using the camera name to choose the right input -->
  <rosparam command="load" file="$(find wild_visual_navigation_ros)/config/wild_visual_navigation/inputs/$(arg camera).yaml" ns="wvn_learning_node"/>

  <!-- Load parameters for second nodes namespace -->
  <rosparam command="load" file="$(arg params_file)" ns="wvn_feature_extractor_node"/>
  <rosparam command="load" file="$(find wild_visual_navigation_ros)/config/wild_visual_navigation/inputs/$(arg camera).yaml" ns="wvn_feature_extractor_node"/>

  <!-- Launch node -->
  <node if="$(arg launch_nodes)" name="wvn_learning_node" pkg="wild_visual_navigation_ros" type="wvn_learning_node.py" output="screen">
    <param if="$(eval arg('stack') == 'rsl')" name="desired_twist_topic" value="/log/state/desiredRobotTwist"/>
    <param if="$(eval arg('stack') == 'anybotics')" name="desired_twist_topic" value="/motion_reference/command_twist"/>
  </node>
  <node if="$(arg launch_nodes)" name="wvn_feature_extractor_node" pkg="wild_visual_navigation_ros" type="wvn_feature_extractor_node.py" output="screen">
    <param if="$(eval arg('stack') == 'rsl')" name="desired_twist_topic" value="/log/state/desiredRobotTwist"/>
    <param if="$(eval arg('stack') == 'anybotics')" name="desired_twist_topic" value="/motion_reference/command_twist"/>
  </node>

  <include if="$(arg resize_images)" file="$(find wild_visual_navigation_ros)/launch/resize_images.launch"/> 

  <!-- Nice visualization overlay-->
  <include if="$(arg overlay_images)" file="$(find wild_visual_navigation_ros)/launch/overlay_images.launch"/> 
</launch>
